doctype html
html
    head
        title User Manager
    body
        form(method='POST', action='/users')
            div
                label(for='userId') User ID
                input(id='userId', name='userId' value='9')
            div
                label(for='name') Name
                input(id='name', name='name' value='jared')
            div
                label(for='email') Email
                input(id='email', name='email' value='jared.com')
            div
                label(for='age') Age
                input(id='age', name='age' value='25')
            div
                input(id='id', name='id', value='#{userCount}' style='display: none')
            div
                input(type='submit', value='Add User')
