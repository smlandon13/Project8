doctype html
html
    head
        title Edit
    body
        form(method='POST', action='/edit')
            div
                label(for='userId') User ID
                input(id='userId', name='userId' value= user.userId)
            div
                label(for='name') Name
                input(id='name', name='name' value= user.name)
            div
                label(for='email') Email
                input(id='email', name='email' value= user.email)
            div
                label(for='age') Age
                input(id='age', name='age' value= user.age)
            div
                input(id='id', name='id', value= user.id style='display: none')
            div
                input(type='submit', value='Edit User')
